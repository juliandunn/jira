# JIRA startup script - adapted from: http://confluence.atlassian.com/display/JIRA/Starting+JIRA+Automatically+on+Linux
# Dynamically generated by Chef on <%= node["fqdn"] %>
# Local modifications will be overwritten by Chef.
#chkconfig: 2345 80 05
#description: Atlassian JIRA

### BEGIN INIT INFO
# Provides:          JIRA
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop Atlassian JIRA standalone server
### END INIT INFO

# Source function library.
<% case node['platform_family'] -%>
<% when 'rhel' -%>
. /etc/rc.d/init.d/functions
<% else -%>
. /lib/lsb/init-functions
<% end -%>

# Define some variables
# Name of app ( JIRA, Confluence, etc )
APP=jira
# Name of the user to run as
USER=<%= @user %>
# Location of application's base directory
BASE=<%= @jira_base %>

status_check(){
  <% case node['platform_family'] -%>
  <% when 'rhel' -%>
  status -p $BASE/work/catalina.pid $APP
  <% else -%>
  status_of_proc -p $BASE/work/catalina.pid $JAVA_HOME/bin/java $APP
  <% end -%>
}

start() {
  echo "Starting $APP"
  su -l $USER -c $BASE/bin/startup.sh
  return $?
}

stop() {
  echo "Stopping $APP"
  su -l $USER -c $BASE/bin/shutdown.sh
  return $?
}

case "$1" in
  # Start command
  start)
    start
    RETVAL=$?
    ;;
  # Stop command
  stop)
    stop
    RETVAL=$?
    ;;
  # Restart command
  restart)
    stop
    sleep 5
    start
    RETVAL=$?
    ;;
  # Status command
  status)
    status_check
    RETVAL=$?
    ;;
  *)
    echo "Usage: $APP {start|restart|stop|status}"
    RETVAL=2
    ;;
esac

exit $RETVAL
